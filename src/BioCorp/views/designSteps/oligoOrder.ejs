<% include ../header %>
<% include ./oligomodals %>
<div class="container" id="oligoOrder">
<form id="oligoForm">
  <!-- progressbar -->
  <ul id="oligoProgressbar">
    <li class="active">Order Information</li>
    <li>Personal Information</li>
    <li>Order Review</li>
    <li>Order In Progress</li>
  </ul>


  <!-- Step 1: Order Information -->
  <fieldset id="fsOligoOrder" style="margin-bottom:40px;">
    <div class="row">
      <h2 class="fs-title">Order DNA/RNA Oligo</h2>
      <h3 class="fs-subtitle">If you are a new customer, please fill out the <a href="#"> Customer Registration Form</a>.</h3>
    </div>

    <div class="row">
      <div class="container">

      <legend data-toggle="collapse" data-target=".regionOption" align="left"><span class=" glyphicon glyphicon-arrow-right"></span> Oligo Sequence </legend>
      <i class="glyphicon glyphicon-question-sign pull-right" data-toggle="modal" data-target="#oligoSequenceModal"></i>

      <ul class="modification">
          <li>
            <label for="modification5">5' Modification </label>
            <div class="form-group">

              <select class="form-control" id="promoList" name="modif5" style="width:100%;">
              <option value="none" selected="selected">None</option>
              <option value="Aminolink">Aminolink</option>
              <option value="Biotin">Biotin</option>
              <option value="Fluorescein-6Fam">Fluorescein-6Fam</option>
              <option value="Fluorescein-Hex">Fluorescein-Hex</option>
              <option value="Fluorescein-Tet">Fluorescein-Tet</option>
              <option value="Phosphorylated">Phosphorylated</option>
              <option value="Tamra">Tamra</option>
              <option value="Others">Others</option>
              </select>
            </div></li>
            <li>

            </li>
            <li>
              <label for="modification3" style="display:inline-block;">3' Modification </label>
              <div class="form-group">
                <select class="form-control" id="promoList" name="modif3" style="width:100%;">
                  <option value="none" selected="selected">None</option>
                  <option value="Aminolink">Aminolink</option>
                  <option value="Biotin">Biotin</option>
                  <option value="Fluorescein-6Fam">Fluorescein-6Fam</option>
                  <option value="Fluorescein-Hex">Fluorescein-Hex</option>
                  <option value="Fluorescein-Tet">Fluorescein-Tet</option>
                  <option value="Phosphorylated">Phosphorylated</option>
                  <option value="Tamra">Tamra</option>
                  <option value="Others">Others</option>
                </select>
              </div></li>
        </ul>

        <div id="sequence-wrap">
          <div id="sequence_alert" class="alert alert-error invisible"></div>
          <textarea id="sequence-display" maxlength="3000" class="input-block-level" rows="5" placeholder="Paste your sequence here..." style="width:80%;"></textarea>
          <div id="sequence_alert" class="alert invisible"></div>
        </div>


        <legend data-toggle="collapse" align="left"><span class=" glyphicon glyphicon-arrow-right"></span> Purity </legend>
        <i class="glyphicon glyphicon-question-sign pull-right" data-toggle="modal" data-target="#oligoPurityModal"></i>

          <div class="form-group purity" align="center">
            <!--<label for="cutsites">Preferred Cut-Sites</label>-->
            <select class="form-control" name="purity" style="width:40%;">
              <option value="Standard" selected="selected" >Standard</option>
              <option value="OPC">OPC</option>
   	          <option value="HPLC">HPLC</option>
   	          <option value="Gel">Gel</option>
   	          <option value="Mixed">Mixed</option>
            </select>
          </div>

          <legend data-toggle="collapse" align="left"><span class=" glyphicon glyphicon-arrow-right"></span> Scale </legend>
          <i class="glyphicon glyphicon-question-sign pull-right" data-toggle="modal" data-target="#oligoScaleModal"></i>

            <div class="form-group scale" align="center">
              <!--<label for="cutsites">Preferred Cut-Sites</label>-->
              <select class="form-control" name="scale" style="width:40%;">
                <option value="50nM" selected="selected" >50 nM</option>
                <option value="2000nM">2000nM</option>
                <option value="1micro">1 &#181M</option>
                <option value="10micro">10 &#181M</option>
                <option value="Mixed">Mixed</option>
              </select>
            </div>

            <legend align="left"><span class=" glyphicon glyphicon-arrow-right"></span> Date Requirement </legend>

              <div class="form-group scale" align="center">
                <!--<label for="cutsites">Preferred Cut-Sites</label>-->
                <select class="form-control" name="datereq" style="width:40%;">
                  <option value="rush" selected="selected" >Rush!</option>
                  <option value="1or2">1 ~ 2 day</option>
                  <option value="lessWeek"> < 1 week</option>
                </select>
              </div>

            <legend align="left"><span class=" glyphicon glyphicon-arrow-right"></span> Optional </legend>

            <ul id="optional">
              <li>
                <input type="checkbox" name="optional" value="plates">In 96 well plates
              </li>
              <li>
                <input type="checkbox" name="optional" value="resuspended" onchange="handleResuspend(this)">Resuspended at
              </li>
              <li>
                <select class="form-control" name="resuspend" disabled id="resuspendList">
                  <option value="50pM" selected="selected">50 pM/&#181L</option>
                  <option value="100pM">100 pM/&#181L</option>
                  <option value="1micro">1 &#181M/&#181L</option>
                  <option value="other">Other</option>
                </select>
              </li>
            </ul>

      </div>

    </div>
    <input type="button" name="next" class="btn btn-primary btn-large stepNext action-button" value="Next" id="submit1">
  </fieldset>


  <!-- Step 2: Design Options -->

  <fieldset id="fsOligoPersonal" style="margin-bottom:40px;">

    <div class="container" id="oligoStepTwo" style="margin-bottom:20px;">
      <legend align="center"> Personal Information </legend>
      <div class="personalInfo">
        <li>
        <label for="firstname">First Name: </label>
        <input type="text" name="firstname" required="required" style="margin-left:15px;" id="firstname">
        </li>
        <li>
        <label for="lastname">Last Name: </label>
        <input type="text" name="lastname" required="required" style="margin-left:15px;" id="lastname">
        </li>
        <li>
        <label for="emailaddr">Email Address</label>
        <input type="email" name="emailaddr" style="margin-left:15px;" id="emailaddr">
        </li>
        <li>
        <label for="accHolder">Account Holder</label>
        <input type="text" name="accHolder" style="margin-left:15px;" id="accHolder">
        </li>
        <li>
        <label for="institution">Institution</label>
        <input type="text" name="institution" style="margin-left:15px;" id="institution">
        </li>
        <li>
        <label for="ponumber">P.O. Number</label>
        <input type="text" name="ponumber" style=" margin-left:15px;" id="ponumber">
        </li>
        <li>
        <label for="invoice">Invoice by</label>
        <select class="form-control" name="invoice" style="margin-left:1.3%;">
          <option value="creditcard">My Credit Card (on File)</option>
          <option value="blanketorder">Blanket Order (on File)</option>
        </select>
        </li>

      </div>

    </div>

    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <input type="button" name="next" class="stepNext action-button" value="Next" id="stepTwoFinish"/>
  </fieldset>

  <!-- Setp 3: Design Review -->
  <fieldset id="fsOligoReview">
    <h2 class="fs-title">Oligo Order Review</h2>

    <div class="container summary">
      <div>
        <table class="table table-hover table-condensed">
          <thead >
            <th>Order Criteria</th>
            <th>Value</th>
          </thead>
          <tbody>

            <tr>
              <td>Oligo Sequence</td>
              <td id="seqOligo">Test Value</td>
            </tr>

            <tr>
              <td>Purity</td>
              <td id="oligoPurity"></td>
            </tr>

            <tr>
              <td>Scale</td>
              <td id="oligoScale"></td>
            </tr>

            <tr>
              <td>Date Requirement</td>
              <td id="oligoDate"></td>
            </tr>

            <tr>
              <td>Plates (Optional)</td>
              <td id="oligoPlates"></td>
            </tr>

            <tr>
              <td>Resuspend</td>
              <td id="oligoResuspended"></td>
            </tr>

            <tr>
              <td>5' Modification</td>
              <td id="oligoModification5"></td>
            </tr>

            <tr>
              <td>3' Modification</td>
              <td id="oligoModification3"></td>
            </tr>

            <tr>
              <td>First Name</td>
              <td id="orderFirstname"></td>
            </tr>

            <tr>
              <td>Last Name</td>
              <td id="orderLastname"></td>
            </tr>

            <tr>
              <td>Email Address</td>
              <td id="orderEmail"></td>
            </tr>

            <tr>
              <td>Account Holder</td>
              <td id="orderAccountHolder"></td>
            </tr>

            <tr>
              <td>Institution</td>
              <td id="orderInstitution"></td>
            </tr>

            <tr>
              <td>Invoice By</td>
              <td id="orderInvoice"></td>
            </tr>

            <tr>
              <td>P.O. Number</td>
              <td id="orderPONumber"></td>
            </tr>

          </tbody>
        </table>
      </div>
      <div id="submitAlert2" class="alert alert-danger invisible"></div>
    </div>

